<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="01-slack-create-user-schema" author="sjanda">
        <createTable tableName="slack_user">
            <column name="slackId" type="varchar(25)">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>
            <column name="userId" type="int">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="email" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="name" type="varchar(255)">
            </column>
        </createTable>
    </changeSet>
    <changeSet id="01-slack-create-user-foreignkey" author="sjanda">
        <addForeignKeyConstraint constraintName="fk_slack_user_userId"
                                 baseTableName="slack_user"
                                 baseColumnNames="userId"
                                 referencedTableName="core_user"
                                 referencedColumnNames="id"/>
    </changeSet>


</databaseChangeLog>